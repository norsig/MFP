%table.analysis{:cellpadding => 0, :cellspacing => 0}
  %caption Most Recent Contacts
  %thead
    %tr
      %th.first DATE
      %th NAME
      %th DOB
      %th RACE / GENDER
      %th.last ADDRESS
  
  %tbody
    - @contacts.each_with_index do |contact,index|
      %tr{:class => "#{(index % 2) == 0 ? "even" : "odd"}"}
        %td{:class => "first#{index == 0 ? " top" : ""}"}= contact.created_at.to_s(:long)
        %td{:class => "#{index == 0 ? "top" : ""}"}= contact.full_name
        %td{:class => "#{index == 0 ? "top" : ""}"}= contact.dob
        %td{:class => "#{index == 0 ? "top" : ""}"}= "#{contact.race.try(:code)} / #{contact.gender.try(:code)}"
        %td{:class => "last#{index == 0 ? " top" : ""}"}= contact.addresses.first.try(:full_address)
  %tfoot
    %tr
      %td{:colspan => 5} &nbsp;
      
%buttons
  %button.positive= link_to "Back", analyses_url
